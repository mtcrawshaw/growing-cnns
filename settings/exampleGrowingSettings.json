{
    "growing": true,

    "initialChannels": 64,
    "numSections": 4,
    "initialNumNodes": 3,

    "growthSteps": 3,
    "growthMode": "expandEdge",
    "numConvToAdd": 1,
    "itemsToExpand": "youngest",
    "copyBatchNorm": true,
    "randomWeights": false,
    "join": {
	    "type": "uniform",
    	    "preserve": 0.95
    },
    "stopping": {
	    "type": "fixedEpochs",
	    "numEpochs": 1
    },

    "batchSize": [128, 64, 64],
    "initialLearningRate": 0.01,
    "momentum": 0.9,
    "weightDecay": 1e-4,
    "batchNorm": true,

    "lrDecayEpochStep": 1,
    "lrDecayEpochRatio": 0.1,
    "lrDecayGrowthRatio": 1.0
}
